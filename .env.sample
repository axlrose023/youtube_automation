# Environment
APP__ENV=local

# API Configuration
APP__API__PORT=8000
APP__API__ALLOWED_HOSTS=["*"]

# JWT Configuration
APP__JWT__SECRET_KEY=your-secret-key-here
APP__JWT__ALGORITHM=HS256
APP__JWT__ACCESS_TOKEN_EXPIRES_IN_MINUTES=30
APP__JWT__REFRESH_EXPIRES_IN_MINUTES=1440

# PostgreSQL Configuration
APP__POSTGRES__USER=postgres
APP__POSTGRES__PASSWORD=postgres
APP__POSTGRES__HOST=localhost
APP__POSTGRES__PORT=5432
APP__POSTGRES__DB=app

# Redis Configuration
APP__REDIS__HOST=localhost
APP__REDIS__PORT=6379
APP__REDIS__DB=0

# Playwright Configuration
APP__PLAYWRIGHT__HEADLESS=true
APP__PLAYWRIGHT__MAX_BROWSERS=2
APP__PLAYWRIGHT__CONTEXTS_PER_BROWSER=5
